-- which sprite to start with
frame = 0  
frames = {0,2}
function _update()
  frame = flr((time()*2) % #frames)
end

function _draw()
  cls()  -- clear screen
  -- draw sprite (sprites are 8x8 each)
  spr(frames[frame+1], 60, 60)  -- draw at x=60,y=60
end

